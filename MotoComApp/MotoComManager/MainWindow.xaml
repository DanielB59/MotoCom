<Window x:Class="MotoComManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotoComManager"
        mc:Ignorable="d"
		ResizeMode="CanResize"
		MinHeight="450"
		MinWidth="550"
        Title="MotoCom Manager" Height="450" Width="800">
	<Grid>
		<GridSplitter VerticalAlignment="Stretch" Margin="215,0,0,0" HorizontalAlignment="Left" Width="5"/>
		<ListBox Name="deviceList" ScrollViewer.CanContentScroll="True" HorizontalAlignment="Left" Margin="10,42,0,10" Width="200" SelectionMode="Single">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock Margin="2" Text="{Binding}"></TextBlock>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<Button Name="scanButton" Click="scanButton_Click" Content="Sync" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Padding="5" Width="90" Height="auto"/>
		<WrapPanel Orientation="Horizontal" Margin="0,10,10,0" VerticalAlignment="top" HorizontalAlignment="Right" Width="559">
			<ComboBox x:Name="toBox" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="120"/>
			<ComboBox x:Name="castTypeBox" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="120"/>
			<ComboBox x:Name="dataBox" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="120"/>
			<Button x:Name="sendButton" Click="sendButton_Click" Margin="5" Content="Send" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="5" Width="120"/>
		</WrapPanel>
	</Grid>
</Window>
